<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RatingBar
        android:id="@+id/reviewRatingRB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/reviewET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" android:minLines="3" android:layout_margin="10dip">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="Upload Image" android:layout_gravity="center_horizontal" android:background="@drawable/header_bg" android:padding="10dip"/>

    <Button
        android:id="@+id/submitReviewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Review" android:background="@drawable/header_bg" android:padding="10dip" android:layout_gravity="center_horizontal"/>

</LinearLayout>